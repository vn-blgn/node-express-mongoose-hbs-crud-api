<div class='container-fluid'>

    <div class='row'>

        <div class='col-sm-3'>
            
            {{>sidebar}}

        </div>

        <div class='col-sm-9'>

          <h1>{{title}}</h1>

          {{#if (error)}}
            <p>Error getting content.</p>
          {{/if}}
          
          <ul>
              <li class="vertical-space"><span class="strong">Players:</span> {{results.player_count}}</li>
              <li class="vertical-space"><span class="strong">Clubs:</span> {{results.club_count}}</li>
              <li class="vertical-space"><span class="strong">Countries:</span> {{results.country_count}}</li>
              <li class="vertical-space"><span class="strong">Positions:</span> {{results.position_count}}</li>
          </ul>

        </div>

    </div>

</div>